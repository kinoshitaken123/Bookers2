<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>title</th>
      <th>Opinion</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to user_path(book.user_id) do %>
        <% end %>
      </td>
    </tr>
    <td>
     <%= link_to book_path(book) do %>
     <%= book.title %>
     <% end %>
    </td>
    <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>